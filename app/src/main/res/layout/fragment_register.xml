<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/tContainer1"
    tools:context=".fragment.otp.RegisterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:src="@drawable/ic_logo_main" />

            <!--            <EditText-->
<!--                android:id="@+id/txtsodienthoai"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:background="@drawable/btn_borderbutton_login"-->
<!--                android:hint="Số điện thoại"-->
<!--                android:inputType="text"-->
<!--                android:maxLines="1"-->
<!--                android:paddingStart="20dp"-->
<!--                android:paddingEnd="0dp"-->
<!--                android:textSize="16sp" />-->


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="120dp">

                <EditText
                    android:id="@+id/txt_newname"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_borderbutton_login"
                    android:hint="Tên người dùng"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawableTint="#838383"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txt_newpassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_borderbutton_login"
                        android:drawableLeft="@drawable/ic_password_key_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="#838383"
                        android:ellipsize="end"
                        android:hint="Mật khẩu"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/txt_confirmpassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_borderbutton_login"
                        android:drawableLeft="@drawable/ic_shield_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="#838383"
                        android:ellipsize="end"
                        android:hint="Xác nhận mật khẩu"
                        android:layout_marginTop="12dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="50dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp">

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#1E8ADF"
                        android:text="Đăng ký"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:backgroundTint="@null" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp">

                    <Button
                        android:id="@+id/btn_register_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F61111"
                        android:text="Không đúng"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:backgroundTint="@null" />
                </androidx.cardview.widget.CardView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã có tài khoản Shopbee ? "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtdangnhapngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập ngay"
                    android:textColor="#FF0000"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>