<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_bottomsheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/image_product_sheet"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:scaleType="centerInside"
            android:src="@drawable/demo_product"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/price_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100.000đ"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/total_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kho: 100"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_Main"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Màu sắc"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/color_1"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dp"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:riv_oval="true"
                    app:riv_border_color="@color/purple_700"
                    app:riv_border_width="1dp"
                    android:layout_height="30dp"
                    android:layout_width="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_search"
                android:layout_margin="10dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/color_2"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dp"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:riv_oval="true"
                    app:riv_border_color="@color/color_Main"
                    app:riv_border_width="1dp"
                    android:layout_height="30dp"
                    android:layout_width="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_search"
                android:layout_margin="10dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/color_3"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dp"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:riv_oval="true"
                    app:riv_border_color="@color/color_Main"
                    app:riv_border_width="1dp"
                    android:layout_height="30dp"
                    android:layout_width="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_search"
                android:layout_margin="10dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/color_4"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dp"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:riv_oval="true"
                    app:riv_border_color="@color/color_Main"
                    app:riv_border_width="1dp"
                    android:layout_height="30dp"
                    android:layout_width="30dp"/>
            </LinearLayout>



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_Main"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số lượng"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center|right"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:gravity="center|top"
                android:textSize="18dp"
                android:background="@drawable/ic_minus"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:text=""
                android:textStyle="bold"
                android:gravity="center|top"
                android:textSize="18dp"
                android:background="@drawable/ic_plus"/>

        </LinearLayout>
        <Button
            android:text="Thêm vào giỏ hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar_daban"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>