    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/txt_item_search"

        >
        <TextView
            android:id="@+id/txt_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="s22 ultra"
            android:layout_marginRight="5dp"

            />
        <TextView
            android:id="@+id/txt_delete_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginRight="5dp"
           />
    </LinearLayout>

</LinearLayout>