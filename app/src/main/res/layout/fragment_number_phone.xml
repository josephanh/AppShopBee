<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/tContainer"
    tools:context=".fragment.otp.NumberPhoneFragment">

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_weight="1" />-->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:paddingBottom="380dp"
        android:gravity="center"
        android:src="@drawable/ic_logo_main" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Xác thực di động"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textSize="28dp"
        android:paddingBottom="180dp" />
    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="40dp"
        android:text="Bạn cần nhập số điện thoại của mình để tiếp tục \nđăng kí!"
        android:textColor="#000000"
        android:layout_marginTop="0dp"
        android:textSize="14dp"
        android:gravity="center"/>


    <LinearLayout
        android:id="@+id/linear_numberphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="clip_vertical"
        android:orientation="horizontal"
        android:paddingTop="100dp"
        android:visibility="visible">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_button_register"
            android:focusable="false"
            android:hint="+84"
            android:inputType="none"
            android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_NumberPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_button_register"
                android:hint="Số điện thoại"
                android:inputType="number|phone"
                android:digits="0123456789"
                android:maxLines="1"
                android:maxLength="10"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_confirmOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="clip_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="100dp"
        android:paddingRight="20dp"
        android:visibility="gone">

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/et_ConfirmCode1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="@drawable/bg_button_register"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxWidth="40dp"
                android:maxLength="1"
                android:maxLines="1"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/et_ConfirmCode2"
                android:layout_width="40dp"
                android:layout_height="50dp"

                android:layout_weight="0"
                android:background="@drawable/bg_button_register"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:maxLines="1"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/et_ConfirmCode3"
                android:layout_width="40dp"
                android:layout_height="50dp"

                android:layout_weight="0"
                android:background="@drawable/bg_button_register"
                android:gravity="center"

                android:inputType="numberDecimal"
                android:maxLength="1"
                android:maxLines="1"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/et_ConfirmCode4"
                android:layout_width="40dp"
                android:layout_height="50dp"

                android:layout_weight="0"
                android:background="@drawable/bg_button_register"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:maxLines="1"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/et_ConfirmCode5"
                android:layout_width="40dp"
                android:layout_height="50dp"

                android:layout_weight="0"
                android:background="@drawable/bg_button_register"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:maxLines="1"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/et_ConfirmCode6"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/bg_button_register"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:maxLines="1"
                android:textColorHint="#8C8989"
                android:textSize="16sp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="260dp"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/btn_NumberPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1E8ADF"
                android:text="Đăng ký"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="visible"
                app:backgroundTint="@null" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="260dp"
        app:cardCornerRadius="10dp">

        <Button
            android:id="@+id/btn_confrim_error_NumberPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F61111"
            android:text="Không đúng"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@null" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="260dp"
        app:cardCornerRadius="10dp">

        <Button
            android:id="@+id/btn_confrim_NumberPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1E8ADF"
            android:text="Xác nhận"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@null" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_guilaima_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:layout_weight="1"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text=""
            android:textColor="#1E8ADF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reSendOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="Gửi lại mã"
            android:textColor="#1E8ADF"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_guilaima_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:layout_weight="1"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right|center_vertical"
                android:paddingRight="3dp"
                android:text="Gửi lại mã:"
                android:textColor="#1E8ADF"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_second_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="right"
                android:text="00"
                android:textColor="#1E8ADF"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>