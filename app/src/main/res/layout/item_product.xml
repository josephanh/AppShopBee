<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:background="@drawable/custom_border_item_product"
    android:id="@+id/item_product">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="200dp"
                android:layout_height="220dp"
                android:scaleType="centerInside"
                android:src="@drawable/demo_product"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kính cường lực Samsung Galaxy A12"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/price_product"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="929.000đ"
                        android:textColor="#FF1414"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/saleoff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-44%"
                        android:textColor="#FF1414"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/item_sale_off"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="#636363"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="#f57224"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/item_sale_off"/>
                    <TextView
                        android:id="@+id/sold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999 đã bán"
                        android:textColor="#636363"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingBottom="0dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_fire"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/total_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Còn hàng"
                        android:textColor="#636363"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>