<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="184dp"
    android:layout_marginRight="10dp"
    android:id="@+id/item_product"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitStart"
        app:riv_corner_radius_top_left="20dp"
        app:riv_corner_radius_top_right="20dp"
        android:src="@drawable/demo_product"/>

    <TextView
        android:id="@+id/name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:maxHeight="46dp"
        android:maxLines="2"
        android:textStyle="bold"
        android:textColor="#323131"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:text="texttextt\nexttexttexttexttext\nsddsadsdasas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="4dp"
            android:textColor="#FF5252"
            android:text="₫" />

        <TextView
            android:id="@+id/price_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="300.000.000.000"
            android:textColor="#FF5252" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="11dp"
        android:textColor="#1C1C1C"
        android:text="Đã bán 10202" />
</LinearLayout>